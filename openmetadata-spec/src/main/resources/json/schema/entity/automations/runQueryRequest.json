{
    "$id": "https://open-metadata.org/schema/entity/automations/workflow/RunQuery.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "RunQueryRequest",
    "javaType": "org.openmetadata.schema.entity.automations.RunQueryRequest",
    "description": "Request object with SQL and service connection to execute query.",
    "type": "object",
    "definitions": {
      "queryTypes": {
        "type": "string",
        "enum": [
          "TEST",
          "RUN"
        ]
      }
    },
    "properties": {
      "serviceType": {
        "description": "Type of service such as Database, Dashboard, Messaging, etc.",
        "$ref": "../services/serviceType.json",
        "default": "Database"
      },
      "queryType": {
        "description": "type of query to execute (TEST or RUN). TEST will return the count of rows, while RUN the actual rows",
        "$ref": "#/definitions/queryTypes"
      },
      "query": {
        "description": "SQL query to execute",
        "type": "string"
      },
      "serviceName": {
        "description": "Value that identifies this service name.",
        "$ref": "../../type/basic.json#/definitions/entityName"
      },
      "openMetadataServerConnection": {
        "$ref": "../services/connections/metadata/openMetadataConnection.json"
      },
      "offset": {
        "description": "Offset to start the query from",
        "type": "integer"
      },
      "limit": {
        "description": "Limit the number of rows returned",
        "type": "integer"
      }
    },
    "additionalProperties": false,
    "required": ["serviceName", "openMetadataServerConnection", "query"]
  }
  